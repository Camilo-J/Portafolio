---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

const { as: Tag = 'div', href, heading, subheading, date, imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}');

if (imagePath) {
  if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
}
---

<Tag href={href} class="flex gap-x-3 relative">
  {
    imagePath && (
      <Image
        src={images[imagePath]()}
        alt={altText}
        loading="eager"
        class="h-14 w-14 absolute -left-20 top-2 rounded-full "
      />
    )
  }
  <div class="lg:min-w-[600px] flex flex-col gap-y-1.5 bg-zinc-900 py-3 px-5 rounded-xl">
    <div class="flex flex-col gap-y-0.5">
      <h1 class="text-lg font-medium">{heading}</h1>
      <h2>{subheading}</h2>
      <h2>{date}</h2>
    </div>
    <slot />
  </div>
</Tag>
