---
const { as: Tag = 'div', href, heading, subheading, date } = Astro.props;
---

<Tag href={href} class="flex gap-x-3 relative">
  <div
    class="flex-grow-1 min-w-[380px] sm:min-w-[460px] lg:min-w-[600px] flex flex-col gap-y-1.5 bg-zinc-900 py-3 px-5 rounded-xl"
  >
    <div class="flex flex-col gap-y-0.5">
      <h1 class="text-lg font-medium">{heading}</h1>
      <h2>{subheading}</h2>
      <h2>{date}</h2>
    </div>
    <slot />
  </div>
</Tag>
