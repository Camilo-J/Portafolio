---
import '../styles/global.css';
import BaseHead from '@/components/organisms/BaseHead/index.astro';
import Footer from '@/components/organisms/FooterLayout/index.astro';
import Header from '@/components/organisms/HeaderLayout/index.astro';
import type { SiteMeta } from '@/types/site';
import { siteConfig } from '@/site.config';
interface Props {
  meta: SiteMeta;
}

const {
  meta: { articleDate, description = siteConfig.description, title },
} = Astro.props;
---

<html lang={siteConfig.lang} class="dark">
  <head>
    <BaseHead
      articleDate={articleDate}
      description={description}
      title={title}
    />
  </head>

  <body class="flex justify-center bg-black text-white/90">
    <main
      class="flex min-h-screen w-screen max-w-240 flex-col items-center px-6 pb-10 pt-7 font-satoshi text-[0.92rem] leading-relaxed sm:px-10 lg:px-10"
    >
      <Header />
      <slot />
      <Footer />
    </main>
  </body>
</html>
